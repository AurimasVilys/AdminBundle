<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin_platform.admin_user.type">Platform\Bundle\AdminBundle\Form\Type\AdminUserType</parameter>
        <parameter key="admin_platform.admin_user.model">Platform\Bundle\AdminBundle\Model\AdminUser</parameter>
    </parameters>

    <services>

        <service id="admin_platform.abstract_resource_type" class="%admin_platform.admin_user.type%">
            <argument>%admin_platform.admin_user.model%</argument>
            <tag name="form.type" />
        </service>

    </services>
</container>
